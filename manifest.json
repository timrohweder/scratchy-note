{
  "manifest_version": 2,
  "name": "Scratchy Note",
  "version": "1.0.0",
  "permissions": ["storage"],
  "browser_action": {
    "default_icon": {
      "16": "images/note-icon16.png",
      "48": "images/note-icon48.png",
      "128": "images/note-icon128.png"
    },
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+Y",
        "mac": "Command+Shift+S",
        "chromeos": "Ctrl+Shift+U",
        "linux": "Ctrl+Shift+J"
      }
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "options.html"
}
